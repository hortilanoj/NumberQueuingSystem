<UserControl x:Class="NumberQueuingSystem.DISPLAY.Views.vHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Grid x:Name="TitleGrid" Grid.Column="1" RenderTransformOrigin="0.5,0.5" Background="{Binding Background_Color}">
        <Label Content="NOW SERVING" Foreground="{Binding Title_Color}" FontWeight="Bold" FontSize="{Binding DisplaySetting.header_title_fontsize}" VerticalAlignment="Top" HorizontalAlignment="Center" Width="Auto" Height="Auto" Background="{x:Null}"/>
        <Label Content="{Binding Current_Date}" HorizontalAlignment="Left" Margin="12,0,0,1" VerticalAlignment="Bottom" Foreground="{Binding Date_Color}" HorizontalContentAlignment="Left" FontSize="{Binding DisplaySetting.header_date_fontsize}" FontWeight="Bold" FontStretch="UltraCondensed" Background="{x:Null}"/>
        <Label Content="{Binding Current_Time}" Margin="0,0,15,1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Foreground="{Binding Time_Color}" HorizontalContentAlignment="Right" FontSize="{Binding DisplaySetting.header_time_fontsize}" FontWeight="Bold" FontStretch="UltraCondensed" Background="{x:Null}"/>
    </Grid>
</UserControl>
