<Window x:Class="NumberQueuingSystem.TERMINAL.Views.vTerminalForwarding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction Forwarding" Height="Auto" Width="Auto" ResizeMode="NoResize" WindowStyle="None" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="1" Grid.Row="0">
            <TextBlock Text="Select Terminal To Transfer Current Transaction" FontSize="14" FontWeight="Bold" Margin="5,5,5,20" TextWrapping="WrapWithOverflow"/>
        </Grid>
        <Grid Grid.RowSpan="1" Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Buttons}" FlowDirection="LeftToRight" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Margin="5,5,5,5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
